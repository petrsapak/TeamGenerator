<Window x:Class="TeamGenerator.Shell.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamGenerator.Shell"
        xmlns:model="clr-namespace:TeamGenerator.Model;assembly=TeamGenerator.Model"
        xmlns:controls="clr-namespace:TeamGenerator.Shell.Controls"
        mc:Ignorable="d"
        Title="Team Generator"
        Height="790"
        Width="1015"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="10 10 10 10"
            Background="{StaticResource BackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!--TopBar-->
                <RowDefinition Height="100"/> <!--MainMenu-->
                <RowDefinition Height="Auto"/> <!--Content-->
            </Grid.RowDefinitions>
            <controls:TopBarControl Grid.Row="0"
                                    ApplicationTitle="{Binding ApplicationTitle}"
                                    MouseDown="TopBarControl_MouseDown"/>
            <controls:MainMenuControl Grid.Row="1"/>
            <ContentControl Grid.Row="2" Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
